---
apiVersion: helm.toolkit.fluxcd.io/v2
kind: HelmRelease
metadata:
  name: expressjs-k8s
  namespace: expressjs
spec:
  interval: 5m
  chart:
    spec:
      chart: expressjs-k8s
      version: 0.1.1
      sourceRef:
        kind: HelmRepository
        name: expressjs-k8s
        namespace: flux-system
  values:
    service:
      main:
        controller: main
        ports:
          http:
            port: 8080

    ingress:
      enabled: true
      className: "internal"
      hosts:
        - host: &host test.${SECRET_DOMAIN}
          paths:
            - path: "/"
              pathType: "Prefix"
              service:
                identifier: main
                port: http
      tls:
        - hosts:
          - *host

