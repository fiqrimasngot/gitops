---
apiVersion: helm.toolkit.fluxcd.io/v2
kind: HelmRelease
metadata:
  name: authentik
spec:
  interval: 5m
  install:
    timeout: 25m
    remediation:
      retries: 5
  upgrade:
    timeout: 25m
    remediation:
      retries: 5
      remediateLastFailure: true
    cleanupOnFail: true
  chart:
    spec:
      # renovate: registryUrl=https://charts.goauthentik.io
      chart: authentik
      version: 2024.6.1
      sourceRef:
        kind: HelmRepository
        name: authentik
        namespace: flux-system
  values:
    kubernetesIntegration: true
    server:
      ingress:
        enabled: true
        ingressClassName: external
        annotations:
          external-dns.alpha.kubernetes.io/target: "external.${SECRET_DOMAIN}"
        hosts:
        - auth.${SECRET_DOMAIN}
    postgresql:
      enabled: true
      primary:
        persistence:
          existingClaim: authentik-db
      auth:
        password: ${SECRET_AUTHENTIK_DB_PASSWORD}
    redis:
      enabled: true
      architecture: standalone
      global:
        storageClass: longhorn
    authentik:
      secret_key: ${SECRET_AUTHENTIK_SECRET_KEY}
      postgresql:
        name: authentik
        user: authentik
        password: ${SECRET_AUTHENTIK_DB_PASSWORD}
    global:
      addPrometheusAnnotations: true
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: authentik-db
spec:
  storageClassName: longhorn
  accessModes:
  - ReadWriteOnce
  resources:
    requests:
      storage: 2Gi

