---
apiVersion: v1
kind: Service
metadata:
  name: docker-web-app
  namespace: web-app
spec:
  ports:
  - port: 80
    targetPort: node-port
    protocol: TCP
  selector:
    app: docker-web-app
  type: LoadBalancer
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: docker-web-app
  namespace: web-app
  labels:
    app: docker-web-app
  annotations:
    fluxcd.io/automated: "true"
    fluxcd.io/tag.node-web-app: semver:~1.0.0
spec:
  strategy:
    rollingUpdate:
      maxUnavailable: 0
    type: RollingUpdate
  selector:
    matchLabels:
      app: docker-web-app
  template:
    metadata:
      labels:
        app: docker-web-app
    spec:
      containers:
      - name: nodeapp
        image: fiqrimasngot/nodeapp:latest
        ports:
        - name: node-port
          containerPort: 4444
