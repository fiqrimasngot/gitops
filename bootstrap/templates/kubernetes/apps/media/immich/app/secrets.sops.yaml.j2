apiVersion: v1
kind: Secret
metadata:
  name: immich-secret
type: Opaque
stringData:
  # App
  DB_DATABASE_NAME: immich
  DB_HOSTNAME: postgres-rw.database.svc.cluster.local
  DB_USERNAME: "immich"
  DB_PASSWORD: "${IMMICH_DB_PASSWORD}"
  JWT_SECRET: "${IMMICH_JWT_SECRET}"
